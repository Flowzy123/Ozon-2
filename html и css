/*КАТАЛОГ*/
/* Каталог (новый блок) */
/* Стили для кнопки внутри .catalog-container */
.catalog-container button {
    padding: 15px 30px; /* Увеличиваем верхний и нижний отступ для увеличения высоты */
    font-size: 16px; /* Размер шрифта */
    border-radius: 20px; /* Скругление углов кнопки */
    background-color: #007bff; /* Синий фон */
    color: white; /* Белый цвет текста */
    border: none; /* Убираем рамку */
    cursor: pointer; /* Курсор-указатель */
    transition: background-color 0.3s ease; /* Плавное изменение фона при наведении */
}
.catalog-container button:hover {
    background-color: #0056b3; /* Темно-синий цвет при наведении */
}
/* Контейнер кнопки */
.catalog-container {
    position: absolute;
    top: 6px; /* Меньший верхний отступ */
    left: calc(50% - 425px); /* Немного уменьшил смещение влево */
    display: flex;
    align-items: center; /* Вертикальное выравнивание */
    padding: 15px 25px; /* Уменьшил отступы */
    background-color: #f8f8f8;
    border-radius: 30px; /* Немного уменьшил скругление */
    cursor: pointer;
    transition: background-color 0.3s ease, border-color 0.3s ease;
    box-shadow: 0 0 8px rgba(255, 255, 255, 0.1); /* Уменьшил тень */
    margin-top: 0px; /* Уменьшил верхний отступ */
    border: 2px solid #0080ff; /* Синяя обводка */
}
/* Эффект при наведении на каталог */
.catalog-container:hover {
    background-color: #f0f0f0; /* Меняется фон на чуть более светлый при наведении */
    border-color: #0080ff; /* Цвет рамки меняется на синий при наведении */
}
/* Текст "КАТАЛОГ" */
.catalog-text {
    font-size: 14px; /* Размер шрифта для текста "КАТАЛОГ" */
    color: #000000; /* Цвет текста (темно-серый) */
}
/* Стили для поисковика */
.search-container {
    position: absolute; /* Абсолютное позиционирование для точного размещения */
    top: -25px; /* Уменьшаем отступ сверху, чтобы поисковик был выше */
    left: 50%; /* Центрируем по горизонтали */
    transform: translateX(-50%); /* Корректируем позицию по оси X для точного центрирования */
    width: 70%; /* Ширина поисковой строки */
    max-width: 600px; /* Максимальная ширина, чтобы не расширялось слишком сильно на больших экранах */
    display: flex; /* Используем flexbox для выравнивания элементов */
    align-items: center; /* Вертикальное выравнивание элементов по центру */
    background-color: #ffffff; /* Белый фон для поисковой строки */
    padding: 5px 12px; /* Уменьшаем внутренние отступы, чтобы уменьшить высоту */
    border-radius: 200px; /* Скругленные углы для плавного и стильного внешнего вида */
    box-shadow: 0 0 15px rgba(255, 255, 255, 0.1); /* Легкая тень вокруг для глубины */
    transition: all 0.3s ease; /* Плавный переход при изменении состояния */
    border: 2px solid #0080ff; /* Синяя обводка */
    margin-top: 30px; /* Уменьшаем отступ сверху, чтобы уменьшить вертикальное пространство */
}
.search-container input {
